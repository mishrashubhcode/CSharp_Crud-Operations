@model IEnumerable<CSharp_Crud_Operations.Models.Teacher>
@{
    ViewBag.Title = "List";
}
<div class="containerlist">
    <nav>
        <a class="navlinks" href="/Teacher/New">New Teacher</a>
    </nav>
    <h2>List of Teachers</h2>

    <form action="/Teacher/List" method="GET">
        <input type="text" name="SearchKey" />
        <input type="submit" value="Search" />
    </form>

    @foreach (var teacher in Model)
    {

        <div class="listitem row">
            <div class="col-md-10">
                <a href="/Teacher/Show/@teacher.TeacherId">@teacher.TeacherFname @teacher.TeacherLname</a>
            </div>
        </div>

    }

</div>
